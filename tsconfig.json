{
    "compilerOptions": {
      "target": "esnext",
      "module": "CommonJs",
      "lib": ["es2017"],
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      // "outDir": "dist",
      "rootDir": ".",
      "removeComments": true,
      "strict": true,
      "alwaysStrict": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
          "~/*": ["src/*/index", "src/*"]
      },
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "jsx": "react-native",
    },
    "include": ["src", "src/**/*"],
    "exclude": ["node_modules", "dist/**/*", "ignore/**/*", "tests/**/*"]
  }